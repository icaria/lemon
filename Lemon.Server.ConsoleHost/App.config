<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <!-- For more information on Entity Framework configuration, visit http://go.microsoft.com/fwlink/?LinkID=237468 -->
    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=5.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
  </configSections>
  
  <log4net>
    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="C:\\logs\\Lemon-Server.log"/>
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="3"/>
      <maximumFileSize value="100KB"/>
      <staticLogFileAccountNumber value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d{dd MMM yyyy HH:mm:ss} %-5level [%4thread] - %m%n"/>
      </layout>
    </appender>
    <appender name="SampleLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <!-- the Installation script will change this variable -->
      <file value="C:\\logs\\LemonSample-Server.log"/>
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="3"/>
      <maximumFileSize value="100KB"/>
      <staticLogFileAccountNumber value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d{dd MMM yyyy HH:mm:ss} %-5level [%4thread] - %m%n"/>
      </layout>
    </appender>
    <root>
      <priority value="DEBUG"/>
      <appender-ref ref="LogFileAppender"/>
    </root>
    <logger name="INFLOWSAMPLE">
      <priority value="DEBUG"/>
      <appender-ref ref="SampleLogFileAppender"/>
    </logger>
  </log4net>

  <system.diagnostics>
    <sources>
      <source name="System.ServiceModel" switchValue="Information, ActivityTracing" propagateActivity="true">
        <listeners>
          <add name="traceListener" type="System.Diagnostics.XmlWriterTraceListener" initializeData="C:\temp\WcfTrace.xml" />
        </listeners>
      </source>
    </sources>
  </system.diagnostics>

  <!-- These are the main URLs for configuration that the client needs to match up with -->
  <appSettings>
    <add key="CslaAuthorizationProvider" value="Winterspring.DataPortal.AuthorizeDataPortal, Lemon.Library" />
    <add key="CslaAuthentication" value="Custom" />
    <add key="LemonDataPortalUri" value="net.tcp://*:5700/Lemon"/>
    <add key="LemonNotificationUri" value="net.tcp://*:5700/Lemon/Notification"/>
    <add key="LemonSampleDataPortalUri" value="net.tcp://*:5700/LemonSample"/>
    <add key="LemonSampleNotificationUri" value="net.tcp://*:5700/LemonSample/Notification"/>
    <add key="ClientSettingsProvider.ServiceUri" value="" />
  </appSettings>
  <system.serviceModel>
    <services>
      <service name="Winterspring.DataPortal.WcfService" behaviorConfiguration="TransportSecurity">
        <endpoint binding="netTcpBinding" bindingConfiguration="SecureNetTcpBinding" contract="Lemon.Common.IWcfService" />
        <endpoint kind="udpDiscoveryEndpoint" />
      </service>
      <service name="Lemon.Common.NotificationService" behaviorConfiguration="TransportSecurity">
        <endpoint binding="netTcpBinding" bindingConfiguration="SecureNetTcpBinding" contract="Lemon.Common.ISubscriptionService" />
        <endpoint kind="udpDiscoveryEndpoint" />
      </service>
    </services>
    <bindings>
      <netTcpBinding>
        <binding portSharingEnabled="true" maxReceivedMessageSize="2147483647" name="SecureNetTcpBinding">
          <security mode="Transport">
            <transport clientCredentialType="None" />
          </security>
          <readerQuotas maxBytesPerRead="2147483647" maxArrayLength="2147483647" maxStringContentLength="2147483647" maxDepth="1024" />
        </binding>
        <!--<binding portSharingEnabled="false" maxReceivedMessageSize="2147483647" name="SimpleNetTcpBinding">
          <security mode="None" />
          <readerQuotas maxBytesPerRead="2147483647" maxArrayLength="2147483647" maxStringContentLength="2147483647" maxDepth="1024" />
        </binding>-->
      </netTcpBinding>
    </bindings>
    <behaviors>
      <serviceBehaviors>
        <behavior name="TransportSecurity">
          <serviceCredentials>
            <serviceCertificate storeAccountNumber="My" storeLocation="LocalMachine" x509FindType="FindBySubjectName" findValue="Lemon App Server" />
          </serviceCredentials>
          <serviceDebug includeExceptionDetailInFaults="false" />

          <!-- Make this service discoverable-->
          <serviceDiscovery/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Csla" publicKeyToken="93be5fdc093e4c30" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.3.13.0" newVersion="4.3.13.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Runtime" publicKeyToken="b03f5f7f11d50a3a" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-2.5.16.0" newVersion="2.5.16.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <entityFramework>
    <defaultConnectionFactory type="System.Data.Entity.Infrastructure.SqlConnectionFactory, EntityFramework" />
  </entityFramework>
</configuration>